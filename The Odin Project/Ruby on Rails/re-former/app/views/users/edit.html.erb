<%= form_for @user do |f| %>
<ul>
  <% @user.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<p>
<%= f.label :username, "Username:" %>
<%= f.text_field :username %>
</p>
<p>
<%= f.label :email, "Email:" %>
<%= f.text_field :email, :value => "example@email.com" %>
</p>
<p>
<%= f.label :password, "Password:" %>
<%= f.password_field :password %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>